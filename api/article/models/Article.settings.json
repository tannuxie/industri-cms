{
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": ""
  },
  "attributes": {
    "title": {
      "required": true,
      "type": "string"
    },
    "published": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.bildbox",
        "content.text-content",
        "content.map",
        "content.2col-text-img",
        "content.2col-text"
      ],
      "required": true
    },
    "mainimage": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": true
    },
    "tags": {
      "collection": "tag",
      "via": "articles",
      "dominant": true
    },
    "date": {
      "type": "date"
    }
  }
}
