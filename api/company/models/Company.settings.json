{
  "connection": "default",
  "collectionName": "companies",
  "info": {
    "name": "company",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": ""
  },
  "attributes": {
    "name": {
      "required": true,
      "type": "string"
    },
    "summary": {
      "required": true,
      "type": "text"
    },
    "published": {
      "required": true,
      "type": "boolean",
      "default": false
    },
    "address": {
      "type": "component",
      "repeatable": true,
      "component": "foretag.addressbook",
      "required": true
    },
    "huvudbild": {
      "type": "component",
      "repeatable": false,
      "component": "content.huvudbild",
      "required": true
    },
    "tags": {
      "collection": "tag",
      "via": "companies",
      "dominant": true
    },
    "type": {
      "required": true,
      "enum": [
        "trä",
        "metall",
        "möbler / träförädling",
        "livsmedel",
        "skor & kläder",
        "plast / gummi",
        "övrigt / diverse"
      ],
      "default": "övrigt / diverse",
      "type": "enumeration"
    },
    "city": {
      "required": true,
      "enum": [
        "sävsjö",
        "vrigstad",
        "stockaryd",
        "rörvik",
        "hultagård",
        "hylletofta"
      ],
      "default": "sävsjö",
      "type": "enumeration"
    },
    "quality": {
      "default": "1",
      "enum": [
        "1",
        "2",
        "3"
      ],
      "type": "enumeration"
    },
	"content": {
      "type": "dynamiczone",
      "components": [
        "content.textbox",
        "content.bildbox",
        "content.karta",
        "content.2col-text",
        "content.2col-text-karta",
        "content.2col-text-img"
      ],
      "required": true
    }
  }
}
